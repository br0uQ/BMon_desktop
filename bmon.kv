<ConnectPage>
    cols: 1
    ActionBar:
        size_hint_y: 0.1
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Bmon Montoring'
                with_previous: False
            ActionOverflow:
            ActionButton:
                important: True
                text: 'New'
                on_release: root.new_element()
    GridLayout:
        size_hint_y: 0.9
        cols: 1
        id: elements
        orientation: 'vertical'

<MonitorPage>
    cols: 1
    BoxLayout:
        orientation: 'horizontal'

        AnchorLayout:
            size_hint_x: 0.9
            anchor_x: 'center'
            id: video_layout

        Slider:
            size_hint_x: 0.1
            id: slider_volume
            anchor_x: 'right'
            orientation: 'vertical'
            min: 0
            max: 10
            step: 1
            value: 10
            padding: 100
            on_touch_move: root.change_volume()

    GridLayout:
        size_hint_y: 0.1
        cols: 2

        Button:
            id: btn_video
            text: 'Video: off'
            on_release: root.switch_video()

        Button:
            id: btn_audio
            text: 'Audio: off'
            on_release: root.switch_audio()

<InfoPage>
    cols: 1
    Label:
        id: lbl_message
        halign: 'center'
        valign: 'middle'
        font_size: 30